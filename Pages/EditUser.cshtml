@page
@model AutoServiceGeniralsMotors.Pages.EditUserModel
@{
    ViewData["Title"] = "Изменить пользователя";
}

<h1>Изменить пользователя</h1>

<form method="post">
<div class="card mb-3">
    <div class=card-body>
        <div class="form-group row">
            <label asp-for="User.Id" class="col-sm-2 col-form-label"></label>
            <div class=col-sm-10>
                <input asp-for="User.Id" disabled class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="User.Email" class="col-sm-2 col-form-label"></label>
            <div class=col-sm-10>
                <input asp-for="User.Email" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="User.UserName" class="col-sm-2 col-form-label"></label>
            <div class=col-sm-10>
                <input asp-for="User.UserName" class="form-control"/>
            </div>
        </div>
    </div>
    <div class=card-footer>
        <button class="btn btn-primary" asp-page-handler="Update" >Изменить</button>
        <button class="btn btn-primary" asp-page-handler="Cancel" >Отменить</button>
    </div>
</div>
</form>