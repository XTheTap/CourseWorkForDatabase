@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="text-center">
    <h1 class="display-4">Добро пожаловать в сервис General Motors</h1>
   
    <hr />

    <div class="carousel slide" data-ride="carousel" data-interval="2000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/Alfa.jpg"/>
            </div>  
            <div class="carousel-item">
                <img src="~/Images/cadillac.jpg"/>
            </div>
            <div class="carousel-item">
                <img src="~/Images/Chevrolet.jpg"/>
            </div>
        </div>
    </div>

    <hr />

    @if (SignInManager.IsSignedIn(User))
    {
        <form method="post">
            <button type="submit" class="btn btn-primary" asp-page-handler="Write">Записатся</button>
        </form>
    }
    else
    {
        <h3>Авторизуйтесь, пожалуйста</h3>
    }
</div>
