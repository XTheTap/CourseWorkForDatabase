@page
@model AutoServiceGeniralsMotors.Pages.CarModel.CarPageModel
@{
    ViewData["Title"] = "Добавление автомобиля";
}

<div style="text-align">
    <h2>Добавление автомобиля</h2>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Automobile.Mark" class="control-label"></label>
            <select asp-for="Automobile.Mark" class ="form-control" asp-items="ViewBag.Mark"></select>
        </div>
        <div class="form-group">
            <label asp-for="Automobile.Body" class="control-label"></label>
            <select asp-for="Automobile.Body" class ="form-control" asp-items="ViewBag.Body"></select>
        </div>
        <div class="form-group">
            <label asp-for="Automobile.NumberAuto" class="control-label"></label>
            <input asp-for="Automobile.NumberAuto" class="form-control" />
            <span asp-validation-for="Automobile.NumberAuto" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</div>